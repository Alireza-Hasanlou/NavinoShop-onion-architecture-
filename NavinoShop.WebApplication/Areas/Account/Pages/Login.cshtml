@page
@model NavinoShop.WebApplication.Areas.Account.Pages.LoginModel
@{
    Layout = "_Layout";
}
 
<section class="inner-page" id="contact-page">
    <div class="container-fluid" id="page-hero">
        <div class="row">
            <div class="col-12">
                <div class="container">
                    <div class="row">
                        <div class="col-12 px-0">
                            <h1>ورود به ناحیه کاربری</h1>
                            <p>وارد ناحیه کاربری خود در ناوینوشاپ شوید شوید.</p>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/Home/Index">صفحه نخست</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">ورود</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-2 py-md-5">
        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1">
                <div class="content">
                    <div class="row">
                        <div class="col-12 col-lg-5 text-center">
                            <img src="/assets/images/login.png" alt="">
                        </div>
                        <div class="col-12 col-lg-7 pt-5 pt-md-0 align-self-center">
                            <div class="title">وارد شوید</div>
                            <p>با عضویت در سایت از همه امکانات سایت بهره مند شوید.</p>
                            <form asp-page="Login">
                                <input type="hidden" asp-for="loginModel.ReturnUrl" />
                            <div class="form-group">
                                <label for="email">شماره همراه :</label>
                                    <input asp-for="loginModel.Mobile" type="tel" onkeypress="return isNumber(event)" class="form-control" id="Mobile">
                            </div>
                            <div class="form-group">
                                <label for="password">رمز عبور :</label>
                                <input asp-for="loginModel.Password"   type="password" class="form-control" id="password">
                            </div>
                            <div class="form-group">
                               <input type="submit" value="ورود به ناحیه کاربری" class="btn btn-success">
                            </div>
                            <span asp-validation-for="loginModel" class="text-danger"></span>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


