@page
@model NavinoShop.WebApplication.Areas.Admin.Pages.Roles.CreateModel
@{
    Layout = "_AdminLayout";
    ViewData["title"] = "ایجاد نقش ";

}
<div class="Formcontainer">

    <form id="blogcontentForm" method="post" enctype="multipart/form-data">
        @for (int i = 0; i < Model.Permissions.Count; i++)
        {
            <input type="hidden" asp-for="Permissions[i].Id" />
            <input type="hidden" asp-for="Permissions[i].Title" />

        }
       

            <div class="col  col-12 col-sm-12 ">

                <div class="custom-form-group">
                    <label for="title" class="required">عنوان</label>
                    <input asp-for="@Model.RoleTitle.Title" type="text" id="Title" onchange="makeSlug('Title','Slug')">
                    <span asp-validation-for="RoleTitle.Title" class="text-danger"></span>
                </div>
            </div>
            
      
        <div class=" col  col-12 col-sm-12">

            <div class="box-header with-border">
                <h4>دسترسی های نقش را مشخص کنید</h4>
            </div>
            <br />
            @if (Model.Permissions.Count() > 0)
            {
                foreach (var item in Model.Permissions)
                {
                    <div>


                        <label class="">

                            <div class="icheckbox_flat-green" aria-checked="false" aria-disabled="false" style="position: relative;margin-right:10px;">
                                <input type="checkbox" class="flat-red" name="permissions" value="@item.Id" style="position: absolute; opacity: 0;">
                                <ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;">

                                </ins>
                            </div>
                            @item.Title
                        </label>
                    </div>
                    <br />
                }
            }
        </div>
        <button type="submit" class="btn btn-success btn-block">افزودن </button>

    </form>
</div>


