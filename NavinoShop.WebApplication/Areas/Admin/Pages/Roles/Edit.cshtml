@page
@model NavinoShop.WebApplication.Areas.Admin.Pages.Roles.EditModel
@{
    Layout = "_AdminLayout";
    ViewData["title"] = "ویرایش نقش ";

}
<div class="Formcontainer">

    <form id="blogcontentForm" asp-page="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Role.Id" />
        @if (Model.Role.permissions.Count() > 0)
        {
            for (int i = 0; i < Model.Role.permissions.Count; i++)
            {
                <input type="hidden" asp-for="@Model.Role.permissions[i]" />
            }
        }


        <div class="col  col-12 col-sm-12 ">

            <div class="custom-form-group">
                <label for="title" class="required">عنوان</label>
                <input asp-for="@Model.Role.Title" type="text" id="Title">
                <span asp-validation-for="Role.Title" class="text-danger"></span>
            </div>
        </div>


        <div class=" col  col-12 col-sm-12">

            <div class="box-header with-border">
                <h4>دسترسی های نقش را مشخص کنید</h4>
            </div>
            @if (Model.Permissions?.Any() == true)
            {
                foreach (var item in Model.Permissions)
                {
                    <div>
                        <label>
                            <input type="checkbox"
                                   class="flat-red"
                                   name="permissions"
                                   value="@item.Id"
                                   @(Model.Role?.permissions?.Any(x => x == item.Id) == true ? "checked" : "") />
                            @item.Title
                        </label>
                    </div>
                    <br />
                }
            }
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success btn-block">ویرایش </button>

    </form>
</div>






