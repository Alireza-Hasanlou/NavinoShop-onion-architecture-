@page
@model NavinoShop.WebApplication.Areas.Admin.Pages.Roles.EditModel
@{
    Layout = "_AdminLayout";
    ViewData["title"] = "ویرایش نقش ";

}
<div class="row">
    <form method="post" role="form" asp-page="Edit">

        @for (int i = 0; i < Model.Permissions.Count; i++)
        {
            <input type="hidden" asp-for="Permissions[i].Id" />
            <input type="hidden" asp-for="Permissions[i].Title" />

        }
        @if ( Model.Role.permissions.Count() > 0)
        {
            for (int i = 0; i < Model.Role.permissions.Count; i++)
            {
                <input type="hidden" asp-for="@Model.Role.permissions[i]" />
            }
        }

        <input id="RoleId" type="hidden" asp-for="Role.Id" />


        <div class="col-md-6">
            <div class="box box-primary ">
                <div class="box-header with-border">
                </div>
                <div class="box-body">
                    <div class="col-md-6 ">
                        <div class="form-group">
                            <label for="exampleInputEmail1">عنوان تقش</label>
                            <input type="text" class="form-control" asp-for="Role.Title" id="RoleTitle" placeholder=" عنوان تقش را وارد کنید">
                        </div>
                        <span class="text-danger"> @Html.ValidationSummary()</span>
                        <div class="box-footer">
                            <button id="EditRoleBtn" type="button" class="btn btn-primary">ویرایش</button>
                        </div>
                        <span id="resultMessage" class="text-danger"></span>
                    </div>

                </div>

            </div>
        </div>

        <div class=" col-md-6">
            <div class="box box-primary ">
                <div class="box-header with-border">
                    <h4>دسترسی های نقش را مشخص کنید</h4>
                </div>
                @if (Model.Permissions?.Any() == true)
                {
                    foreach (var item in Model.Permissions)
                    {
                        <div>
                            <label>
                                <input type="checkbox"
                                       class="flat-red"
                                       name="permissions"
                                       value="@item.Id"
                                       @(Model.Role?.permissions?.Any(x => x == item.Id) == true ? "checked" : "") />
                                @item.Title
                            </label>
                        </div>
                    }
                }

            </div>
        </div>

    </form>
</div>



