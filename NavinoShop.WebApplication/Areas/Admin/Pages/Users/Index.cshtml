@page
@using Shared.Application
@model NavinoShop.WebApplication.Areas.Admin.Pages.Users.IndexModel
@{
    Layout = "_AdminLayout";
    ViewData["title"] = "کاربران";
    var successMessage = ViewData["success"] as string;
}
<div class="box">
    <div class="box-header">
        <h3 class="box-title">تصاویر</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
            <a href="/Admin/Users/Create" class="btn btn-success">افزودن</a>
            <br />
            <div class="row col-12">
                <form>
                    <div class="col col-md-4 col-sm-6">
                        <div id="DataTables_Table_0_filter" class="dataTables_filter">
                            <label>
                                جستجو:
                                <input name="filter"  asp-for="Users.Filter" type="search" class="form-control input-sm" placeholder="" aria-controls="DataTables_Table_0">
                            </label>
                        </div>
                    </div>
                    <div class="col col-md-4 col-sm-6">
                        <div class="dataTables_length" id="DataTables_Table_0_length">
                            <label>
                                نمایش
                                <select name="take" asp-for="Users.Take" aria-controls="DataTables_Table_0" class="form-control input-sm">
                                    <option value="10">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100">100</option>
                                </select>
                                داده
                            </label>
                        </div>
                    </div>
                    <div class="col col-md-4 col-sm-6">
                        <button class="btn btn-info">جست و جو </button>
                    </div>
                </form>

            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="ImageDataTable table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">

                        <thead>
                            <tr role="row">
                                <th></th>
                                <th>نام</th>
                                <th>شماره تماس </th>
                                <th>ایمیل</th>
                                <th>تاریخ ایجاد</th>
                                <th>وضعیت اکانت</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Users.Users.Count() > 0)
                            {
                                @foreach (var item in Model.Users.Users)
                                {
                                    <tr id="@item.Id">
                                        <td style="width:100px"><img src="@( FileDirectories.UserImageDirectory100+ item.Avatar)" /></td>
                                        <td>@item.FullName</td>
                                        <td>@item.Mobile</td>
                                        <td>@item.Email</td>
                                        <td>@item.CreateDate.ToPersainDate()</td>
                                        <td>
                                            @{
                                                string title = item.Active ? "غیر فعال شود ؟؟؟" : "فعال شود ؟؟؟";
                                                string text = item.Active ? "" : "";
                                                string cancel = item.Active ? "فعال بماند" : "غیر فعال بماند";
                                                string confirm = item.Active ? "غیر فعال شود" : "فعال شود";
                                            }
                                            <!-- From Uiverse.io by Galahhad -->
                                            <div onclick="AjaxSweetNotDelete(
                                                                                                                                                 '@title',
                                                                                                                                                 '@text',
                                                                                                                                                 'question',
                                                                                                                                                 '@confirm',
                                                                                                                                                  '@cancel',
                                                                                                                                                 '/Admin/Users/ChangeActivation',
                                                                                                                                                  '@item.Id' )" class="switch">
                                                <input id="@item.Id" @(item.Active ? "checked" : "") type="checkbox">
                                                <div class="slider">
                                                    <div class="circle">
                                                        <svg class="cross" xml:space="preserve" style="enable-background:new 0 0 512 512" viewBox="0 0 365.696 365.696" y="0" x="0" height="6" width="6" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" xmlns="http://www.w3.org/2000/svg">
                                                        <g>
                                                        <path data-original="#000000" fill="currentColor" d="M243.188 182.86 356.32 69.726c12.5-12.5 12.5-32.766 0-45.247L341.238 9.398c-12.504-12.503-32.77-12.503-45.25 0L182.86 122.528 69.727 9.374c-12.5-12.5-32.766-12.5-45.247 0L9.375 24.457c-12.5 12.504-12.5 32.77 0 45.25l113.152 113.152L9.398 295.99c-12.503 12.503-12.503 32.769 0 45.25L24.48 356.32c12.5 12.5 32.766 12.5 45.247 0l113.132-113.132L295.99 356.32c12.503 12.5 32.769 12.5 45.25 0l15.081-15.082c12.5-12.504 12.5-32.77 0-45.25zm0 0"></path>
                                                                                                </g>
                                                                                            </svg>
                                                        <svg class="checkmark" xml:space="preserve" style="enable-background:new 0 0 512 512" viewBox="0 0 24 24" y="0" x="0" height="10" width="10" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" xmlns="http://www.w3.org/2000/svg">
                                                        <g>
                                                        <path class="" data-original="#000000" fill="currentColor" d="M9.707 19.121a.997.997 0 0 1-1.414 0l-5.646-5.647a1.5 1.5 0 0 1 0-2.121l.707-.707a1.5 1.5 0 0 1 2.121 0L9 14.171l9.525-9.525a1.5 1.5 0 0 1 2.121 0l.707.707a1.5 1.5 0 0 1 0 2.121z"></path>
                                                                                                </g>
                                                                                            </svg>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="/Admin/Users/Details?Id=@item.Id" class="btn btn-info">جزییات</a>
                                                <a href="/Admin/Transactions/Index?userId=@item.Id" class="btn btn-warning">تراکنش ها</a>
                                                <a onclick="DeleteAjax('   آیا از حذف این کاربر هستید؟', 'پس از حذف ،کاربر در دسته کاربران حذف شده قرار میگیرد و دوباره میتوانید آن را برگردانید  ', 'warning', 'بله', '/Admin/Users/ChangeDelete',@item.Id)" class="btn btn-danger">حذف</a>
                                            </div>
                                            
                                        </td>
                                    </tr>



                                }
                            }

                        </tbody>

                    </table>
                </div>
            </div>

            @if (Model.Users.PageCount > 1)
            {
                <div class="row">
                    <div class="col-sm-5"></div>
                    <div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="DataTables_Table_0_paginate">
                            <ul class="pagination">

                                <li class="paginate_button previous @((Model.Users.PageId == Model.Users.StartPage) ? "active" : "")" id="DataTables_Table_0_previous">
                                    <a href="/Admin/Users/Index?pageId=@Model.Users.StartPage" aria-controls="DataTables_Table_0" data-dt-idx="0" tabindex="0">@Model.Users.StartPage</a>
                                </li>
                                @for (int i = Model.Users.StartPage + 1; i < Model.Users.EndPage; i++)
                                {
                                    <li class="paginate_button  @((Model.Users.PageId == i) ? "active" : "")">
                                        <a href="/Admin/Users/Index?pageId=@i" aria-controls="DataTables_Table_0" data-dt-idx="1" tabindex="0">@i</a>
                                    </li>
                                }
                                <li class="paginate_button next @((Model.Users.PageId == Model.Users.EndPage) ? "active" : "")" id="DataTables_Table_0_next">
                                    <a href="/Admin/Users/Index/Index?pageId=@Model.Users.EndPage" aria-controls="DataTables_Table_0" data-dt-idx="2" tabindex="0">@Model.Users.EndPage</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }




        </div>
    </div>
    <!-- /.box-body -->
</div>
@section Scripts {
    @if (!string.IsNullOrEmpty(successMessage))
    {
        ViewData["success"] = null;
        <script>
            AlerSweetWithTimer( "@successMessage","success", "center");
        </script>
    }

}