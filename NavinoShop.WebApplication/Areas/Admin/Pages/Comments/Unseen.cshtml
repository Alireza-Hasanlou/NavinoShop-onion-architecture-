@page
@model NavinoShop.WebApplication.Areas.Admin.Pages.Comments.UnseenModel
@{

    Layout = "_AdminLayout";
    ViewData["title"] = " نظرات دیده نشده ";
    var successMessage = TempData["success"] as string;

}
<div class="box">
    <div class="box-header">
        <h3 class="box-title">تصاویر</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">


            <div class="row col-12">
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="ImageDataTable table table-bordered table-striped dataTable" role="grid">
                        <thead>
                            <tr role="row">
                                <th> نام</th>
                                <th> ایمیل</th>
                                <th> کاربر</th>
                                <th> نظر</th>
                                <th> وضعیت</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.UnseenComments.Count() > 0)
                            {
                                foreach (var item in Model.UnseenComments)
                                {
                                    <tr id="Deleted_@item.Id">
                                        <td>
                                            @item.FullName
                                        </td>
                                        <td>
                                            @item.Email
                                        </td>
                                        <td>
                                            @item.UserName
                                        </td>
                                        <td>@item.Text</td>
                                        <td>@item.CommentStatus.ToString().Replace("_", " ")</td>
                                        <td>
                                            <a class="btn btn-success btn-sm" onclick="AjaxSweet(
                                                         'تایید شود',
                                                         'پس از تایید, کامنت نمایش داده میشود ',
                                                         'question',
                                                         'تایید شود',
                                                          'انصراف',
                                                           '/Admin/Comments/Accept/@item.Id',
                                                           'Deleted_@item.Id')">
                                                تایید ؟
                                            </a>
                                            <a class="btn btn-danger btn-sm" onclick="AjaxSweetInput(
                                                         'دلیل رد کردن',
                                                         'رد شود',
                                                           '/Admin/Comments/Reject/@item.Id/',
                                                           'Deleted_@item.Id')">
                                                رد شود ؟
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
