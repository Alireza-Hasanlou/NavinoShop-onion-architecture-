@page
@using Shared.Application
@model NavinoShop.WebApplication.Areas.Admin.Pages.BlogCategories.EditModel

@{
    Layout = "_AdminLayout";
    ViewData["title"] = "ویرایش دسته بندی ";

}

<div class="row">
    <form method="post"  asp-page="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="EditBlogCategory.Parent" />
        <input type="hidden" asp-for="EditBlogCategory.Id" />
        <input type="hidden" asp-for="EditBlogCategory.ImageName" />
        <div class="col-md-6">
            <div class="box box-primary ">
                <div class="box-header with-border">
                </div>

                <div class="box-body">
                    <div class="col-md-6 ">
                        <div class="form-group">
                            <label for="exampleInputEmail1">عنوان دسته بندی </label>
                            <input asp-for="EditBlogCategory.Title" id="Title" type="text" onchange="makeSlug('Title','Slug')" class="form-control">
                        </div>
                        <span asp-validation-for="EditBlogCategory.Title" class="text-danger"></span>
                        <div class="form-group">
                            <label for="exampleInputEmail1">سربرگ </label>
                            <input asp-for="EditBlogCategory.Slug" id="Slug" type="text" class="form-control">
                        </div>
                        <span asp-validation-for="EditBlogCategory.Slug" class="text-danger"></span>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Alt تصویر </label>
                            <input asp-for="EditBlogCategory.ImageAlt" type="text" class="form-control">
                        </div>
                        <span asp-validation-for="EditBlogCategory.ImageAlt" class="text-danger"></span>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">ویرایش</button>
                        </div>
                        
                    </div>

                </div>

            </div>
        </div>

        <div class=" col-md-6">
            <div id="imagebox" class="box box-primary ">
                <div class="box-header with-border">
                    <h4>لطفا یک تصویر برای دسته بندی انتخاب کنید</h4>
                </div>
                <div id="img-container">
                    <img id="img" src="@FileDirectories.BlogCategoryImageDirectory400@Model.EditBlogCategory.ImageName" />
                    <p id="text">هنوز تصویری اضافه نشده</p>
                </div>
                <label for="file-upload" class="custom-file-upload">
                    افزودن تصویر
                </label>
                <input asp-for="EditBlogCategory.ImageFile" id="file-upload" type="file" accept="image/png, image/jpeg" />
                <span asp-validation-for="EditBlogCategory.ImageFile" class="text-danger"></span>
                <br />
                <br />
            </div>
           
        </div>

    </form>
</div>

