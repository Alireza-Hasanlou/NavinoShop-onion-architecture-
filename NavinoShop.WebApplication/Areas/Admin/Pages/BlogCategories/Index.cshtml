@page
@model NavinoShop.WebApplication.Areas.Admin.Pages.BlogCategories.IndexModel
@{
    Layout = "_AdminLayout";
    ViewData["title"] = "دسته بندی های وبلاگ";
    var successMessage = TempData["success"] as string;
}


<div class="box">
    <div class="box-header">
        <h3 class="box-title">@Model.BlogCategories.PageTitle</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <div id="example1_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            @if (Model.BlogCategories.parentId > 0)
            {
                <a asp-page="Create" asp-route-parentId="@Model.BlogCategories.parentId" class="btn btn-success">افزودن زیرگروه جدید</a>
            }
            else
            {
                <a href="/Admin/BlogCategories/Create" class="btn btn-success">افزودن سرگروه جدید</a>
            }
            <br />
            <div class="row">
                <div class="col-sm-12">
                    <table class="DataTable table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
                        <thead>
                            <tr role="row">
                                <th class="sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="تصویر: activate to sort column descending" style="width: 256.188px;">تصویر</th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="تاریخ ایجاد: activate to sort column ascending" style="width: 464.469px;">عنوان</th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="عنوان: activate to sort column ascending" style="width: 424.812px;">تاریخ ایجاد</th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label=">تاریخ ویرایش: activate to sort column ascending" style="width: 134.828px;">تاریخ ویرایش</th>
                                <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="عملیات: activate to sort column ascending" style="width: 134.828px;">وضعیت</th>
                                <td>عملیات</td>
                        </thead>
                        <tbody>
                            @if (Model.BlogCategories.Categories.Count > 0)
                            {
                                @foreach (var item in Model.BlogCategories.Categories)
                                {
                                    <tr id="@item.Id" role="row" class="odd">
                                        <td>
                                            <img width="100px" src="@(item.ImageName)" />
                                        </td>
                                        <td class="sorting_1">@item.Title</td>
                                        <td>@item.CreationDate</td>
                                        <td>@item.UpdateDate</td>
                                        <td>
                                            @{
                                                string title = item.Active ? "غیر فعال شود ؟؟؟" : "فعال شود ؟؟؟";
                                                string text = item.Active ? "بعد از غیر فعال شدن این دسته بندی و مقاله های آن نمایش داده نمیشود ." : "بعد از فعال شدن این دسته بندی و مقاله های فعال آن نمایش داده میشود";
                                                string cancel = item.Active ? "فعال بماند" : "غیر فعال بماند";
                                                string confirm = item.Active ? "غیر فعال شود" : "فعال شود";
                                            }
                                            <!-- From Uiverse.io by Galahhad -->
                                            <div onclick="AjaxSweetNotDelete(
                                                                                                 '@title',
                                                                                                 '@text',
                                                                                                 'question',
                                                                                                 '@confirm',
                                                                                                  '@cancel',
                                                                                                  '/Admin/BlogCategories/ChangeActivation',
                                                                                                  '@item.Id' )" class="switch">
                                                <input id="@item.Id" @(item.Active ? "checked" : "") type="checkbox">
                                                <div class="slider">
                                                    <div class="circle">
                                                        <svg class="cross" xml:space="preserve" style="enable-background:new 0 0 512 512" viewBox="0 0 365.696 365.696" y="0" x="0" height="6" width="6" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" xmlns="http://www.w3.org/2000/svg">
                                                        <g>
                                                        <path data-original="#000000" fill="currentColor" d="M243.188 182.86 356.32 69.726c12.5-12.5 12.5-32.766 0-45.247L341.238 9.398c-12.504-12.503-32.77-12.503-45.25 0L182.86 122.528 69.727 9.374c-12.5-12.5-32.766-12.5-45.247 0L9.375 24.457c-12.5 12.504-12.5 32.77 0 45.25l113.152 113.152L9.398 295.99c-12.503 12.503-12.503 32.769 0 45.25L24.48 356.32c12.5 12.5 32.766 12.5 45.247 0l113.132-113.132L295.99 356.32c12.503 12.5 32.769 12.5 45.25 0l15.081-15.082c12.5-12.504 12.5-32.77 0-45.25zm0 0"></path>
                                                </g>
                                            </svg>
                                                        <svg class="checkmark" xml:space="preserve" style="enable-background:new 0 0 512 512" viewBox="0 0 24 24" y="0" x="0" height="10" width="10" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" xmlns="http://www.w3.org/2000/svg">
                                                        <g>
                                                        <path class="" data-original="#000000" fill="currentColor" d="M9.707 19.121a.997.997 0 0 1-1.414 0l-5.646-5.647a1.5 1.5 0 0 1 0-2.121l.707-.707a1.5 1.5 0 0 1 2.121 0L9 14.171l9.525-9.525a1.5 1.5 0 0 1 2.121 0l.707.707a1.5 1.5 0 0 1 0 2.121z"></path>
                                                </g>
                                            </svg>
                                                    </div>
                                                </div>
                                            </div>

                                        <td>  <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning">ویرایش</a></td>
                                        @if (item.ParentId == 0)
                                        {
                                            <td>  <a asp-page="index" asp-route-Id="@item.Id" class="btn btn-info">زیرگروه ها</a></td>
                                        }

                                        <td>  <a href="/Admin/Blogs/Index?Id=@item.Id" class="btn btn-primary">مقالات</a></td>
                                    </tr>

                                }
                            }

                        </tbody>

                    </table>
                </div>
            </div>

        </div>
    </div>
    <!-- /.box-body -->
</div>
@section scripts {
    @if (!string.IsNullOrEmpty(successMessage))
    {
        TempData["success"] = null;
        <script>
            AlerSweetWithTimer("@successMessage","success", "center");
        </script>
    }



}



