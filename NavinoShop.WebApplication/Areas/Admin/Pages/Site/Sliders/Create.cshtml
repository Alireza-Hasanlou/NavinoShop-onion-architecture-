@page
@using Shared.Domain.Enums
@model NavinoShop.WebApplication.Areas.Admin.Pages.Site.Sliders.CreateModel
@{
    Layout = "_AdminLayout";
    ViewData["title"] = "ایجاد اسلایدر ";

}
<div class="Formcontainer">

    <form method="post" enctype="multipart/form-data">


        <div class="Formcontainer">


            <form method="post" enctype="multipart/form-data">
              
                    <div class="col  col-12 ">

                        <div class="custom-form-group">
                            <label for="Url" class="required">لینک مقصد</label>
                            <input asp-for="@Model.CreateSlider.Url" type="text" id="Url" ">
                            <span asp-validation-for="CreateSlider.Url" class="text-danger"></span>
                        </div>
                    </div>
              
                <div class="row">


                    <div class="col col-md-6 col-sm-12 col-12">

                        <div class="custom-form-group">
                            <label class="required" for="ImageAlt"> Alt تصویر</label>
                            <input asp-for="CreateSlider.ImageAlt" type="text" id="ImageAlt">
                            <span asp-validation-for="CreateSlider.ImageAlt" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col col-md-6 col-sm-12 col-12">
                        <div id="img-container">
                            <label for="upload-file">
                                <div class="picture-uploader" data-url="">
                                    <div class="picture__image">Choose an image</div>

                                    <input asp-for="@Model.CreateSlider.ImageFile" type="file" id="upload-file" class="picture__input" accept="image/*" />
                                </div>
                            </label>

                        </div>
                        <span asp-validation-for="CreateSlider.ImageFile" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-success btn-block">افزودن </button>

            </form>
        </div>

    </form>
</div>


