@page
@model NavinoShop.WebApplication.Areas.Admin.Pages.UsersMessage.DetailModel
@{
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
            </div>
            <div class="box-body">
                <hr />
                <dl class="dl-horizontal">

                    <dt>
                        کاربر سایت ؟
                    </dt>
                    <dd>
                        @if (string.IsNullOrEmpty(Model.Detail.UseName))
                        {
                            <p>@Model.Detail.UseName</p>
                        }
                        else
                        {
                            <p>کاربر سایت نیست</p>
                        }
                    </dd>
                    <dt>
                        وضعیت
                    </dt>
                    <dd>
                        @Model.Detail.Status.ToString().Replace("_", " ")
                    </dd>
                    <dt>
                        نام کامل
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Detail.FullName)
                    </dd>
                    <dt>
                        موضوع پیام
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => Model.Detail.Subject)
                    </dd>
                    <dt>
                        شماره تماس
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Detail.PhoneNumber)
                    </dd>
                    <dt>
                        ایمیل
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Detail.Email)
                    </dd>
                    <dt>
                        تاریخ ثبت
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Detail.CreationDate)
                    </dd>
                    <dt>
                        متن پیام
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Detail.Message)
                    </dd>
                    <dt>
                        متن پاسخ در  sms
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Detail.AnswerSms)
                    </dd>
                    <dt>
                        متن پاسخ در  ایمیل
                    </dt>
                    <dd>
                        @Html.Raw(Model.Detail.AnswerEmail)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>