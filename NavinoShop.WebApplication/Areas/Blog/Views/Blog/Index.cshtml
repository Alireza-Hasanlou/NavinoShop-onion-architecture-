@{
    Layout = "_BlogLayout";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" integrity="sha512-utbXrRI9/3NlU5j/lI+5lO3bN0t5L7n0N2I+7w2rjENy5O3lC5Lz7mV6O4mOCaE8tKhbQJKMX9Z1oPzQv3h+Dw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" integrity="sha512-3f8VclGzICwz4q2dBl4XzHjYc1vhC/wQXhI5V3E9hW5r9bWjzKHfKZ7JkNlwLx2C6J+Xl+6EXp3DpC5l+8w5Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />


<div class="container">
    <div class="trending-now">
        <span class="trending-now__label">
            <i class="ui-flash"></i>
            خبرهای داغ
        </span>
        <div class="newsticker">
            <ul class="newsticker__list" style="height: 34px; overflow: hidden;">
                @await Component.InvokeAsync("TrendingNow")
            </ul>
        </div>
        <div class="newsticker-buttons">
            <button class="newsticker-button newsticker-button--next" id="newsticker-button--next" aria-label="previous article"><i class="ui-arrow-left"></i></button>
            <button class="newsticker-button newsticker-button--prev" id="newsticker-button--prev" aria-label="next article"><i class="ui-arrow-right"></i></button>
        </div>
    </div>
</div>
@await Component.InvokeAsync("Featuredposts");
<div class="main-container container pt-24" id="main-container">

    <!-- Content -->
    <div class="row">

        <!-- Posts -->
        <div class="col-lg-8 blog__content">

            <!-- Latest News -->
            <section class="section tab-post mb-16">
                <div class="title-wrap title-wrap--line">
                    <h3 class="section-title">آخرین عنوان ها</h3>

                    <div class="tabs tab-post__tabs">
                        <ul class="tabs__list" id="BestBlogParentul">
                        </ul> <!-- end tabs -->
                    </div>
                </div>

                <!-- tab content -->
                <div class="tabs__content tabs__content-trigger tab-post__tabs-content" id="BestBlogChilddiv">

                    <div class="tabs__content-pane tabs__content-pane--active" id="tab-all" style="display: none;">
                        <div class="row card-row">
                        </div>
                    </div> <!-- end pane 1 -->

                </div> <!-- end tab content -->
            </section> <!-- end latest news -->

        </div> <!-- end posts -->
        <!-- Sidebar -->
        <aside class="col-lg-4 sidebar sidebar--right">

            <aside class="widget widget_mc4wp_form_widget">
                <h4 class="widget-title">خبرنامه</h4>
                <p class="newsletter__text">
                    <i class="ui-email newsletter__icon"></i>
                    برای اطلاع از آخرین خبرها مشترک شوید
                </p>
                <div class="mc4wp-form">
                    <div class="mc4wp-form-fields">
                        <div class="form-group">
                            <input type="email" placeholder="ایمیل" id="InputUsersEmail" required="">
                        </div>
                        <div class="form-group">
                            <input type="button" onclick="AddUsersEmail()" class="btn btn-lg btn-color" value="عضویت">
                        </div>
                    </div>
                    <span id="InputUsersEmailValid" class="m-2"></span>
                </div>
            </aside> <!-- end widget newsletter -->
            <!-- Widget Ad 300 -->
            <aside class="widget widget_media_image">
                @await Component.InvokeAsync("LeftSideBaner")
            </aside> <!-- end widget ad 300 -->

        </aside> <!-- end sidebar -->

    </div> <!-- end content -->
    <!-- Ad Banner 728 -->
    <div class="text-center pb-48">
        @await Component.InvokeAsync("CenterBaner")
    </div>

    @await Component.InvokeAsync("MostViewedBlogs")

</div>
@section scripts {
    <script>
        $(function(){

            GetBestBlogs();
        })
               

    </script>
}