@{
    ViewData["Title"] = "Home Page";
}

<section id="slider" class="mt-3">
    <div class="container">
        <div class="row">

            <div id="carouselExampleCaptions" class="col-12 col-md-9  carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions"
                            data-bs-slide-to="0" class="active" aria-current="true"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions"
                            data-bs-slide-to="1"></button>
                </div>
                <div class="carousel-inner">

                    @await Component.InvokeAsync("Slider")
                </div>
                <button class="carousel-control-prev" type="button"
                        data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>

                <button class="carousel-control-next" type="button"
                        data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>

            <div class="col-12 col-md-3 mt-2 mt-sm-1 text-center text-sm-start" id="slider-side-banners">
                <div class="row row-cols-1 row-cols-sm-3 row-cols-md-1 h-100 gy-2 g-sm-1 g-md-0">

                    @await Component.InvokeAsync("SliderSideBaners")
                </div>
            </div>
        </div>
    </div>
</section>
<section id="benefits" class="pt-4">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 gy-3 text-center">
            <div class="col aos-init aos-animate" data-aos="fade-zoom-in" data-aos-duration="800">
                <img src="/images/benefits/benefit1.png" alt="">
                <span>پشتیبانی 24 ساعته</span>
            </div>
            <div class="col aos-init aos-animate" data-aos="fade-zoom-in" data-aos-duration="1000">
                <img src="/images/benefits/benefit2.png" alt="">
                <span>ضمانت اصالت کالا</span>
            </div>
            <div class="col aos-init aos-animate" data-aos="fade-zoom-in" data-aos-duration="1200">
                <img src="/images/benefits/benefit3.png" alt="">
                <span>ضمانت بازگشت وجه</span>
            </div>
            <div class="col aos-init aos-animate" data-aos="fade-zoom-in" data-aos-duration="1400">
                <img src="/images/benefits/benefit4.png" alt="">
                <span>ارسال سریع و رایگان</span>
            </div>
        </div>
        <div class="row pt-2">
            <div class="col">
                <hr>
            </div>
        </div>
    </div>
</section>
<div class="container aos-init aos-animate" data-aos="fade-up" data-aos-duration="1200">
    <div class="row">
        <div class="col-12 col-md-4 pt-2 text-center">
            @await Component.InvokeAsync("promoCenterBanerRightSide")
        </div>
        <div class="col-12 col-md-8 pt-2 text-center">
            @await Component.InvokeAsync("promoCenterBanerLeftSide")
        </div>
    </div>
</div>